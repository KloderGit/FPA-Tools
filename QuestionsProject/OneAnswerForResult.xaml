<UserControl x:Class="QuestionsProject.OneAnswerForResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestionsProject"
             mc:Ignorable="d" Width="133.25" Height="28.792" Margin="0,0,2,2">
    <Border BorderBrush="#FF5B5B5B" BorderThickness="1,1,0,0">
        <Grid x:Name="Root">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="txtNumber" Text="100"
                       TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14.667"/>
            <TextBlock x:Name="txtLetter" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="B." VerticalAlignment="Center" FontSize="14.667" FontWeight="Bold"/>

        </Grid>
    </Border>
</UserControl>
