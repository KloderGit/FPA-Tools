<UserControl x:Class="QuestionsProject.editChapter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestionsProject"
             mc:Ignorable="d" 
             >
    <Grid x:Name="Root" Height="209" Width="494" >
        <TextBox x:Name="txtTitle" x:FieldModifier="public" HorizontalAlignment="Left" Height="52" Margin="10,45,0,0" TextWrapping="Wrap" Text="{Binding Path=Text}" VerticalAlignment="Top" Width="473" FontSize="18.667" FontWeight="Light"/>
        <TextBox x:Name="txtDescription" x:FieldModifier="public" HorizontalAlignment="Left" Height="68" Margin="121,124,0,0" TextWrapping="Wrap" Text="{Binding Path=Description}" VerticalAlignment="Top" Width="362" FontSize="18.667" FontWeight="Light"/>
        <Label x:Name="label" Content="Название" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,14,0,0" FontSize="16"/>
        <Label x:Name="label_Copy" Content="Описание" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,124,0,0" FontSize="16"/>
    </Grid>
</UserControl>
